<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Blog</title>
  </head>
<body>
  <%- include("./partials/nav") %>
  <div class="container mt-3">
      <h1><%= blog.title %></h1>
      <img src="<%= blog.coverImageURL %>" width="700px">
      <pre class="mt-3"><%= blog.body %></pre>
      </div>
  </div>
  <div class="container mt-4"> 
    <h5>Created by : </h5>
    <img src="/<%= blog.createdBy.profileImageURL %>" width="50px" />
    <%= blog.createdBy.fullname %>
  </div>

  <div class="container mt-4"> 
    <h3>Comments(<%= comments.length %>)</h5>
      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="post"><div class="mb-3 mt-4 ">
        <div class="mb-3">
          <input type="text" class="form-control" id="content" aria-describedby="content" name="content" placeholder="Enter Your Comment">
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
      </form>
      <% } %>
  </div>

<div class="container mt-4"> 

  <% comments.forEach(comment => { %>
   <div>
    <img src="/<%= comment.createdBy.profileImageURL %>" width="50px" />
    <%= comment.createdBy.fullname %>
    <pre><%= comment.content %></pre>
   </div>
  <% }) %>
</div>

  
  <%- include("./partials/script") %>
</body>
</html>